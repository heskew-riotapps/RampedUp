@{
    Layout = null;
}

<div ng-show="authorized">
    <div class="p-h-md p-v bg-white box-shadow pos-rlt">
        <h3 class="no-margin" translate>Views.AddOpportunity.Title</h3>
    </div>
    
    <div class="p-md">
        <mc-messages></mc-messages>
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading bg-white">
                        <div translate>Views.AddOpportunity.Labels.SubTitle</div>
                        <small class="text-muted" translate>Views.AddOpportunity.Labels.Instructions</small>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <div class="form-group">
                                <label for="inputCompetitor" translate>Views.AddOpportunity.Labels.Competitor</label>
                                <input type="text" class="form-control" ng-model="model.competitor" id="inputCompetitor">
                            </div>
                            <div class="form-group">
                                <label for="inputIndustry" translate>Views.AddOpportunity.Labels.Industry</label>
                                <input type="text" class="form-control" ng-model="model.industry" id="inputIndustry">
                            </div>

                            <button class="btn btn-info p-h-md m-v-lg" ng-click="onSaveClick()" type="button">
                                <span ng-show="saving">
                                    <i class="fa fa-refresh fa-spin"></i>
                                    <span translate>Buttons.Saving</span>
                                </span>
                                <span ng-hide="saving" translate>Buttons.Save</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
